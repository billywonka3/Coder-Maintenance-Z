<body #id="custom-page" bgcolor="######" style="color:white">

  <h2>Edit Details for {{customDetail.name}}</h2>

  <form action="/custom/edit/{{customDetail._id}}" method="POST">

    <label>Name</label>
    <input class="white-input" 
          name="name" 
          type="text" 
          placeholder="name"
          value="{{customDetail.name}}"
    >

    <label>Description</label>
    <input 
      class="white-input" 
      name="description" 
      type="text" 
      placeholder="description"
      value="{{customDetail.description}}">

    <button type="submit"> Save Changes </button>

  </form>

</body>