  <h2>Edit Details for {{customDetail.name}}</h2>

  <form action="/custom/update/{{customDetail._id}}" method="POST">

    <label>Name</label>
    <input class="white-input" name="name" type="text" value="{{customDetail.name}}">

    <label>Description</label>
    <input class="white-input" name="description" type="text" value="{{customDetail.description}}">

    <button> Save Changes </button>

  </form>

</body>