<body bgcolor="######" style="color:white">
  {{#if user}}
    <div id="profile-buttons">
      <a href="/main">
        <button class="main-btn">Back to Main</button>
      </a>
      <form action="/logout" method="POST">
        <button class="logout-btn">Logout</button>
      </form>
    </div>
    <hr>

    <img src="images/x-ray-cameraman.jpg" class="x-camera" >

    <form action="/profile" method="POST" enctype="multipart/form-data" class="profile-div">
      <h3> Profile Page </h3>
      <p> Name: {{user.name}} </p>
        <label> Edit : </label> 
        <input id="edit-name" type="text">
        <br>
      <p> City: {{user.city}} </p>
        <label> Edit : </label> 
        <input id="edit-city" type="text">
        <br>
      <p> Email: {{user.email}} </p>
        <label> Edit : </label> 
        <input id="edit-email" type="text">
        <br>
      <p> Password: </p>
        <label> Edit : </label> 
        <input id="edit-password" type="text">
        <br>
      <button id="update-btn">Update Profile</button>
      {{!-- <div>
        <label>Name : </label>
        <input id="update-name" type="text">
      </div> --}}
    </form>

    <br>
    <hr>

    <div id="custom-section">
      {{!-- <div class="leftside">
          <h4> Custom Routine </h4>
          <button id="custom-btn"> Show Routine </button>
          <div id="list-of-custom">
            
          </div>
      </div> --}}

      <div class="rightside">
        <form action="/profile" method="POST" enctype="multipart/form-data">
          <h4>Add a Stretch to your Routines </h4>

            <label>Name of Exercise</label>
            <input id="new-title" type="text">


            <label>Write a Brief Description</label>
            <input id="new-description" type="text">

            <br>
            <label>Upload an Image</label>
            <form action="/upload" method="post" enctype="multipart/form-data">
              <input id="new-image" type="file" name="photo">
              <input type="submit" value="Save">
            </form>
            <br>

          <button href="/custom" id="add-new-btn">Create Card</button>
          <a href="/custom" class="routines-link"> See Routines List </a>
        </form>
      </div>

    </div>
  {{/if}}
</body>