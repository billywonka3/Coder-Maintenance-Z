<body bgcolor="######" style="color:white">
  {{#if user}}
    <div class="profile-div">
      <div>
        <div class="left-profile-div">
          <form action="/profile" method="POST" enctype="multipart/form-data" class="form-div">
            <h3> Profile Page </h3>
            <p> Name: {{user.name}} </p>
              <label> Edit Name : </label> 
              <input id="edit-name" type="text" class=" input-color">
              <br>
            <p> City: {{user.city}} </p>
              <label> Edit City : </label> 
              <input id="edit-city" type="text" class=" input-color">
              <br>
            <p> Email: {{user.email}} </p>
              <label> Update Email : </label> 
              <input id="edit-email" type="text" class=" input-color">
              <br>
            <p> Password: </p>
              <label> Change Password : </label> 
              <input id="edit-password" type="text" class=" input-color">
              <br>
            <br>
            <button id="update-btn">Update Profile</button>
          </form>
        </div>

        {{!-- <hr> --}}
        
        <div class="right-profile-div">
          <div class="camera-div">
            <img src="images/x-ray-cameraman.jpg" class="x-camera" >
          </div>
          
          <div id="profile-buttons">
            {{!-- <a href="/custom/custom-index"> 
              <button class="main-btn"> See Custom Routines List </button>
            </a> --}}
            <a href="/main">
              <button class="main-btn">Back to Main</button>
            </a>
            <form action="/logout" method="POST">
              <button class="main-btn">Logout</button>
            </form>
          </div>
        </div>
      </div>

  {{/if}}
</body>